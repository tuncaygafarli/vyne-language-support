{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Vyne",
  "scopeName": "source.vyne",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#modules" },
    { "include": "#operators" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#constants" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.vyne",
          "match": "#.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.vyne",
          "match": "\\b(if|while|return|module|dismiss|group|sub|break|continue|through|loop)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.vyne",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.logical.vyne",
          "match": "(&&|\\|\\||==|!=|>=|<=|>|<)"
        },
        {
          "name": "keyword.operator.range.vyne",
          "match": "(\\.\\.|::|->)"
        },
        {
          "name": "keyword.operator.assignment.vyne",
          "match": "="
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.vyne",
          "match": "\\b[0-9]+(\\.[0-9]+)?\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.vyne",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.vyne",
          "match": "\\\\."
        }
      ]
    },
    "modules": {
      "patterns": [
        {
          "name": "support.function.vyne",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?=\\s*\\()"
        },
        {
          "name": "support.class.vyne",
          "match": "\\b(vcore|vglib|vmem)\\b"
        }
      ]
    }
  }
}
